<section class="sign-up">
  <div class="container">
    <h2><strong>Inscrivez-vous</strong></h2>
    <%= form_tag("/send", method: "post") do %>
        <div class="row">
          <div class="col-lg-3 col-md-3 col-sm-3">
            <%= text_field_tag("name", "", class: "form-control", placeholder: "Votre nom complet") %>
          </div>
          <div class="col-lg-3 col-md-3 col-sm-3">
            <%= text_field_tag("company", "", class: "form-control", placeholder: "Nom de la société") %>
          </div>
          <div class="col-lg-3 col-md-3 col-sm-3">
            <%= email_field_tag("mail", "", class: "form-control", placeholder: "E-mail") %>
          </div>
          <div class="col-lg-3 col-md-3 col-sm-3">
            <%= select_tag("package", options_for_select([['Type de forfait', 'Type de forfait'], ['Type de forfait', 'Type de forfait'], ['Type de forfait', 'Type de forfait']]), class: "form-control") %>
          </div>
